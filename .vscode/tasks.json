{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [
            "build",
            "${workspaceFolder}/albums-api/albums-api.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
        ],
        "problemMatcher": "$msCompile"
    },
    {
        "label": "publish",
        "command": "dotnet",
        "type": "process",
        "args": [
            "publish",
            "${workspaceFolder}/albums-api/albums-api.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
        ],
        "problemMatcher": "$msCompile"
    },
    {
        "label": "watch",
        "command": "dotnet",
        "type": "process",
        "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/gh-copilot-demo.sln"
        ],
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run album-viewer-aspnet",
        "command": "dotnet",
        "type": "process",
        "args": [
            "run",
            "--project",
            "${workspaceFolder}/album-viewer-aspnet/album-viewer-aspnet.csproj"
        ],
        "isBackground": true,
        "group": "build"
    }
  ]
}
